{
  "extends": [
    "next/core-web-vitals"
  ],
  "ignorePatterns": [
    ".next/**/*",
    "out/**/*",
    "build/**/*",
    "dist/**/*",
    "node_modules/**/*",
    ".jest-cache/**/*",
    "coverage/**/*",
    "*.config.js",
    "*.config.ts"
  ],
  "rules": {
    "no-console": "warn",
    "no-debugger": "error",
    "prefer-const": "error",
    "no-var": "error",
    "no-unused-vars": "warn",
    "@next/next/no-img-element": "off"
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "jest": true
  },
  "overrides": [
    {
      "files": [
        "**/__tests__/**/*",
        "**/*.test.ts",
        "**/*.test.tsx",
        "**/*.spec.ts",
        "**/*.spec.tsx",
        "tests/**/*",
        "scripts/**/*"
      ],
      "rules": {
        "no-console": "off"
      }
    }
  ]
}
