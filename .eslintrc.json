{
  "extends": [
    "next/core-web-vitals"
  ],
  "rules": {
    // React rules
    "react-hooks/exhaustive-deps": "warn",
    "react/no-unescaped-entities": "off",
    "react/display-name": "off",

    // General code quality
    "no-console": "off",
    "prefer-const": "warn",
    "no-var": "warn",

    // Import rules
    "import/no-anonymous-default-export": "off",

    // Next.js specific
    "@next/next/no-img-element": "off"
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  }
}
