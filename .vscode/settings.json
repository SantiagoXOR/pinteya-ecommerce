{
  // ===== OPTIMIZACIONES DE RENDIMIENTO PARA PROYECTOS GRANDES =====
  
  // Exclusión agresiva de archivos para reducir indexación
  "files.exclude": {
    "**/node_modules": true,
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    
    // EXCLUSIÓN MASIVA: 78,614 archivos → Reducir a <1,000
    "**/test-results": true,
    "**/playwright-report": true,
    "**/coverage": true,
    "**/__tests__": true,     // OCULTAR temporalmente (demasiados archivos)
    "**/e2e": true,           // OCULTAR temporalmente (demasiados archivos)
    "**/tests": true,         // OCULTAR temporalmente (demasiados archivos)
    "**/__mocks__": true,     // OCULTAR temporalmente

    // JEST CACHE - PROBLEMA CRÍTICO IDENTIFICADO
    "**/.jest-cache": true,   // 🚨 3,760 archivos causando sobrecarga
    "**/jest-cache": true,
    "**/.cache/jest": true,
    
    // Backups y archivos temporales (reducen ~5,000 archivos)
    "**/backup-*": true,
    "**/backups": true,
    "**/*.backup": true,
    "**/*.backup.*": true,
    "**/temp": true,
    "**/tmp": true,
    
    // Archivos de build y cache (reducen ~2,000 archivos)
    "**/.next": true,
    "**/out": true,
    "**/build": true,
    "**/dist": true,
    "**/*.tsbuildinfo": true,
    "**/storybook-static": true,
    
    // DOCUMENTACIÓN MASIVA - OCULTAR TEMPORALMENTE
    "**/docs": true,        // OCULTAR (demasiados archivos)
    "**/*.md": true,        // OCULTAR archivos markdown temporalmente

    // SCRIPTS Y CONFIGURACIONES - OCULTAR TEMPORALMENTE
    "**/scripts": true,     // OCULTAR (demasiados archivos)
    "**/.vscode": false,    // Mantener solo configuración VS Code

    // ARCHIVOS DE CONFIGURACIÓN MASIVOS
    "**/package-lock.json": true,
    "**/yarn.lock": true,
    "**/pnpm-lock.yaml": true,
    "**/*.config.js": true,
    "**/*.config.ts": true,
    "**/tsconfig*.json": false,  // Mantener solo TypeScript configs principales
    
    // Logs y archivos temporales + CACHES ADICIONALES
    "**/*.log": true,
    "**/logs": true,
    "**/*.cache": true,
    "**/haste-map-*": true,
    "**/perf-cache-*": true,

    // CACHES ADICIONALES QUE PUEDEN CAUSAR PROBLEMAS
    "**/.cache": true,
    "**/cache": true,
    "**/.npm": true,
    "**/.yarn": true,
    "**/.pnpm": true,
    "**/node_modules/.cache": true,
    "**/.next/cache": true,
    "**/dist/cache": true,
    "**/logger_*": true
  },
  
  // Exclusión de búsqueda para mejorar performance
  "search.exclude": {
    "**/node_modules": true,
    "**/test-results": true,
    "**/playwright-report": true,
    "**/coverage": true,
    "**/backup-*": true,
    "**/backups": true,
    "**/.next": true,
    "**/out": true,
    "**/build": true,
    "**/dist": true,
    "**/storybook-static": true,
    "**/*.log": true,
    "**/logs": true,
    "**/*.tsbuildinfo": true,
    "**/*.cache": true
  },
  
  // Exclusión de file watcher para reducir CPU
  "files.watcherExclude": {
    "**/node_modules/**": true,
    "**/test-results/**": true,
    "**/playwright-report/**": true,
    "**/coverage/**": true,
    "**/backup-*/**": true,
    "**/backups/**": true,
    "**/.next/**": true,
    "**/out/**": true,
    "**/build/**": true,
    "**/dist/**": true,
    "**/storybook-static/**": true,
    "**/*.log": true,
    "**/logs/**": true,
    "**/*.tsbuildinfo": true,
    "**/*.cache": true,
    "**/haste-map-*": true,
    "**/perf-cache-*": true,
    "**/logger_*": true
  },
  
  // ===== OPTIMIZACIONES DE TYPESCRIPT AGRESIVAS =====

  // DESHABILITAR TypeScript Language Server temporalmente
  "typescript.validate.enable": false,
  "typescript.format.enable": false,
  "typescript.preferences.includePackageJsonAutoImports": "off",
  "typescript.suggest.autoImports": false,
  "typescript.suggest.includeCompletionsForModuleExports": false,
  "typescript.suggest.includeAutomaticOptionalChainCompletions": false,
  "typescript.updateImportsOnFileMove.enabled": "never",
  "typescript.disableAutomaticTypeAcquisition": true,
  "typescript.preferences.useLabelDetailsInCompletionEntries": false,
  "typescript.workspaceSymbols.scope": "currentProject",
  "typescript.suggest.enabled": false,
  "typescript.implementationsCodeLens.enabled": false,
  "typescript.referencesCodeLens.enabled": false,
  
  // ===== LÍMITES EXTREMOS PARA 78,614 ARCHIVOS =====

  // Limitar archivos que VS Code puede procesar
  "files.maxMemoryForLargeFilesMB": 512,
  "files.watcherExclude": {
    "**/node_modules/**": true,
    "**/.git/**": true,
    "**/test-results/**": true,
    "**/coverage/**": true,
    "**/__tests__/**": true,
    "**/e2e/**": true,
    "**/tests/**": true,
    "**/docs/**": true,
    "**/scripts/**": true
  },

  // ===== OPTIMIZACIONES DE ESLINT DESHABILITADAS =====

  // DESHABILITAR ESLint temporalmente (consume mucho CPU)
  "eslint.enable": false,
  
  // ===== OPTIMIZACIONES ULTRA-AGRESIVAS DE EDITOR =====

  // DESHABILITAR TODAS las funciones que consumen CPU
  "editor.quickSuggestions": {
    "other": false,
    "comments": false,
    "strings": false
  },
  "editor.suggestOnTriggerCharacters": false,
  "editor.acceptSuggestionOnEnter": "off",
  "editor.wordBasedSuggestions": "off",
  "editor.parameterHints.enabled": false,
  "editor.hover.enabled": false,
  "editor.lightbulb.enabled": "off",
  "editor.inlineSuggest.enabled": false,
  "editor.suggest.preview": false,
  "editor.suggest.showStatusBar": false,
  "editor.linkedEditing": false,
  "editor.occurrencesHighlight": "off",
  "editor.selectionHighlight": false,
  "editor.wordHighlight": false,
  
  // DESHABILITAR COMPLETAMENTE renderizado pesado
  "editor.minimap.enabled": false,
  "editor.codeLens": false,
  "editor.folding": false,
  "editor.glyphMargin": false,
  "editor.lineNumbers": "off",
  "editor.renderWhitespace": "none",
  "editor.renderControlCharacters": false,
  "editor.renderLineHighlight": "none",
  "editor.smoothScrolling": false,
  "editor.cursorBlinking": "solid",
  "editor.cursorSmoothCaretAnimation": "off",
  "editor.fontLigatures": false,
  
  // Optimizar Git
  "git.enabled": true,
  "git.autorefresh": false,
  "git.decorations.enabled": false,
  "git.ignoreLimitWarning": true,
  
  // Optimizar extensiones - DESHABILITAR TEMPORALMENTE
  "extensions.autoUpdate": false,
  "extensions.autoCheckUpdates": false,
  "extensions.ignoreRecommendations": true,

  // Deshabilitar extensiones pesadas temporalmente
  "eslint.enable": false,
  "prettier.enable": false,
  "tailwindCSS.emmetCompletions": false,
  "emmet.showExpandedAbbreviation": "never",
  
  // ===== CONFIGURACIONES ESPECÍFICAS DEL PROYECTO =====
  
  // Configuración para Next.js
  "emmet.includeLanguages": {
    "javascript": "javascriptreact",
    "typescript": "typescriptreact"
  },
  
  // Formateo con Prettier (más eficiente que TypeScript formatter)
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": false,  // Desactivar para mejorar performance
  "editor.codeActionsOnSave": {},
  
  // Configuración de archivos
  "files.trimTrailingWhitespace": false,
  "files.insertFinalNewline": false,
  "files.trimFinalNewlines": false,
  
  // ===== CONFIGURACIONES DE MEMORIA =====

  // Limitar uso de memoria
  "typescript.preferences.maxInlayHintLength": 10,
  "typescript.suggest.completeFunctionCalls": false,

  // Configuración de terminal optimizada
  "terminal.integrated.rendererType": "dom",
  "terminal.integrated.fastScrollSensitivity": 5,

  // ===== OPTIMIZACIONES ADICIONALES DE RENDIMIENTO =====

  // Reducir procesos en segundo plano
  "workbench.editor.enablePreview": false,
  "workbench.editor.enablePreviewFromQuickOpen": false,
  "workbench.editor.closeEmptyGroups": true,
  "workbench.editor.limit.enabled": true,
  "workbench.editor.limit.value": 10,
  "workbench.editor.limit.perEditorGroup": true,

  // Optimizar IntelliSense
  "editor.suggest.maxVisibleSuggestions": 5,
  "editor.suggest.filterGraceful": false,
  "editor.suggest.localityBonus": false,
  "editor.suggest.shareSuggestSelections": false,

  // Reducir análisis de archivos
  "files.associations": {
    "*.js": "javascript",
    "*.jsx": "javascriptreact",
    "*.ts": "typescript",
    "*.tsx": "typescriptreact"
  },

  // Optimizar extensiones específicas
  "tailwindCSS.includeLanguages": {
    "typescript": "typescript",
    "typescriptreact": "typescriptreact"
  },
  "tailwindCSS.validate": false,
  "tailwindCSS.lint.invalidApply": "ignore",
  "tailwindCSS.lint.invalidScreen": "ignore",
  "tailwindCSS.lint.invalidVariant": "ignore",
  "tailwindCSS.lint.invalidConfigPath": "ignore",
  "tailwindCSS.lint.invalidTailwindDirective": "ignore",

  // Desactivar funciones pesadas de Git
  "git.autofetch": false,
  "git.autofetchPeriod": 0,
  "git.fetchOnPull": false,
  "git.pruneOnFetch": false,
  "git.showProgress": false,

  // Optimizar búsqueda
  "search.smartCase": false,
  "search.globalFindClipboard": false,
  "search.maintainFileSearchCache": false,
  "search.collapseResults": "auto",
  "search.maxResults": 1000,

  // ===== OPTIMIZACIONES ADICIONALES DE RENDIMIENTO =====

  // Reducir procesos en segundo plano
  "workbench.editor.enablePreview": false,
  "workbench.editor.enablePreviewFromQuickOpen": false,
  "workbench.editor.closeEmptyGroups": true,
  "workbench.editor.limit.enabled": true,
  "workbench.editor.limit.value": 10,
  "workbench.editor.limit.perEditorGroup": true,

  // Optimizar IntelliSense
  "editor.suggest.snippetsPreventQuickSuggestions": false,
  "editor.suggest.localityBonus": true,
  "editor.suggest.shareSuggestSelections": false,
  "editor.suggest.showWords": false,
  "editor.suggest.maxVisibleSuggestions": 5,

  // Reducir análisis de archivos
  "files.associations": {
    "*.js": "javascript",
    "*.jsx": "javascriptreact",
    "*.ts": "typescript",
    "*.tsx": "typescriptreact"
  },

  // Optimizar extensiones específicas
  "tailwindCSS.includeLanguages": {
    "typescript": "typescript",
    "typescriptreact": "typescriptreact"
  },
  "tailwindCSS.validate": false,
  "tailwindCSS.lint.invalidApply": "ignore",
  "tailwindCSS.lint.invalidScreen": "ignore",
  "tailwindCSS.lint.invalidVariant": "ignore",
  "tailwindCSS.lint.invalidConfigPath": "ignore",
  "tailwindCSS.lint.invalidTailwindDirective": "ignore",

  // Reducir actividad de red
  "telemetry.telemetryLevel": "off",
  "update.mode": "none",
  "npm.fetchOnlinePackageInfo": false,
  
  // ===== CONFIGURACIONES DE DESARROLLO =====
  
  // Mantener funcionalidades esenciales para desarrollo
  "editor.semanticHighlighting.enabled": true,
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": false,
  
  // Configuración de workspace
  "workbench.startupEditor": "none",
  "workbench.enableExperiments": false,
  "workbench.settings.enableNaturalLanguageSearch": false,
  
  // ===== CONFIGURACIONES ESPECÍFICAS POR TIPO DE ARCHIVO =====
  
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": false,
    "editor.codeActionsOnSave": {}
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": false,
    "editor.codeActionsOnSave": {}
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": false
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": false
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": false
  },
  "editor.guides.indentation": false
}
