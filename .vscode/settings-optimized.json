{
  // ===== CONFIGURACIÓN ULTRA-OPTIMIZADA PARA 78,614 ARCHIVOS =====
  // Objetivo: Reducir a <1,000 archivos indexados
  // CPU: 100% → <20% | RAM: 3.7GB → <1GB
  
  // ===== EXCLUSIONES MASIVAS DE ARCHIVOS =====
  "files.exclude": {
    // Dependencias y control de versiones (>50,000 archivos)
    "**/node_modules": true,
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    
    // Testing y reportes (>15,000 archivos)
    "**/test-results": true,
    "**/playwright-report": true,
    "**/coverage": true,
    "**/__tests__": true,
    "**/e2e": true,
    "**/tests": true,
    "**/__mocks__": true,
    "**/jest-cache": true,
    
    // Build y cache (>5,000 archivos)
    "**/.next": true,
    "**/out": true,
    "**/build": true,
    "**/dist": true,
    "**/*.tsbuildinfo": true,
    "**/storybook-static": true,
    "**/.cache": true,
    "**/tmp": true,
    "**/temp": true,
    
    // Documentación (>2,000 archivos)
    "**/docs": true,
    "**/*.md": true,
    "**/README*": false,  // Mantener solo README principal
    
    // Scripts y configuraciones (>1,000 archivos)
    "**/scripts": true,
    "**/*.config.js": true,
    "**/*.config.ts": true,
    "**/package-lock.json": true,
    "**/yarn.lock": true,
    "**/pnpm-lock.yaml": true,
    
    // Logs y temporales (>500 archivos)
    "**/*.log": true,
    "**/logs": true,
    "**/*.cache": true,
    "**/haste-map-*": true,
    "**/perf-cache-*": true,
    
    // Backups (>200 archivos)
    "**/backup-*": true,
    "**/backups": true,
    "**/*.backup": true,
    "**/*.backup.*": true
  },
  
  // ===== EXCLUSIONES DE BÚSQUEDA =====
  "search.exclude": {
    "**/node_modules": true,
    "**/.git": true,
    "**/test-results": true,
    "**/coverage": true,
    "**/__tests__": true,
    "**/e2e": true,
    "**/tests": true,
    "**/docs": true,
    "**/scripts": true,
    "**/*.log": true,
    "**/.next": true,
    "**/dist": true,
    "**/build": true
  },
  
  // ===== LÍMITES DE MEMORIA Y ARCHIVOS =====
  "files.maxMemoryForLargeFilesMB": 256,
  "files.watcherExclude": {
    "**/node_modules/**": true,
    "**/.git/**": true,
    "**/test-results/**": true,
    "**/coverage/**": true,
    "**/__tests__/**": true,
    "**/e2e/**": true,
    "**/tests/**": true,
    "**/docs/**": true,
    "**/scripts/**": true,
    "**/.next/**": true,
    "**/dist/**": true,
    "**/build/**": true
  },
  
  // Solo observar carpetas esenciales
  "files.watcherInclude": [
    "src/**/*",
    "app/**/*", 
    "components/**/*",
    "pages/**/*",
    "lib/**/*",
    "utils/**/*",
    "hooks/**/*",
    "types/**/*",
    "styles/**/*"
  ],
  
  // ===== TYPESCRIPT DESHABILITADO TEMPORALMENTE =====
  "typescript.validate.enable": false,
  "typescript.format.enable": false,
  "typescript.suggest.enabled": false,
  "typescript.preferences.includePackageJsonAutoImports": "off",
  "typescript.suggest.autoImports": false,
  "typescript.updateImportsOnFileMove.enabled": "never",
  "typescript.disableAutomaticTypeAcquisition": true,
  "typescript.implementationsCodeLens.enabled": false,
  "typescript.referencesCodeLens.enabled": false,
  "typescript.workspaceSymbols.scope": "currentProject",
  
  // ===== ESLINT Y PRETTIER DESHABILITADOS =====
  "eslint.enable": false,
  "prettier.enable": false,
  
  // ===== EDITOR ULTRA-OPTIMIZADO =====
  "editor.quickSuggestions": {
    "other": false,
    "comments": false,
    "strings": false
  },
  "editor.suggestOnTriggerCharacters": false,
  "editor.acceptSuggestionOnEnter": "off",
  "editor.wordBasedSuggestions": "off",
  "editor.parameterHints.enabled": false,
  "editor.hover.enabled": false,
  "editor.lightbulb.enabled": "off",
  "editor.inlineSuggest.enabled": false,
  "editor.suggest.preview": false,
  "editor.suggest.showStatusBar": false,
  "editor.linkedEditing": false,
  "editor.occurrencesHighlight": "off",
  "editor.selectionHighlight": false,
  "editor.wordHighlight": false,
  
  // ===== RENDERIZADO MÍNIMO =====
  "editor.minimap.enabled": false,
  "editor.codeLens": false,
  "editor.folding": false,
  "editor.glyphMargin": false,
  "editor.lineNumbers": "off",
  "editor.renderWhitespace": "none",
  "editor.renderControlCharacters": false,
  "editor.renderLineHighlight": "none",
  "editor.renderIndentGuides": false,
  "editor.smoothScrolling": false,
  "editor.cursorBlinking": "solid",
  "editor.cursorSmoothCaretAnimation": "off",
  "editor.fontLigatures": false,
  
  // ===== EXTENSIONES DESHABILITADAS =====
  "extensions.autoUpdate": false,
  "extensions.autoCheckUpdates": false,
  "extensions.ignoreRecommendations": true,
  "tailwindCSS.emmetCompletions": false,
  "emmet.showExpandedAbbreviation": "never",
  
  // ===== WORKBENCH OPTIMIZADO =====
  "workbench.startupEditor": "none",
  "workbench.enableExperiments": false,
  "workbench.settings.enableNaturalLanguageSearch": false,
  "workbench.tips.enabled": false,
  
  // ===== GIT OPTIMIZADO =====
  "git.enabled": false,
  "git.autorefresh": false,
  "git.decorations.enabled": false,
  
  // ===== TELEMETRÍA DESHABILITADA =====
  "telemetry.telemetryLevel": "off",
  "workbench.enableExperiments": false,
  
  // ===== CONFIGURACIONES DE RENDIMIENTO =====
  "files.simpleDialog.enable": true,
  "explorer.compactFolders": false,
  "breadcrumbs.enabled": false,
  "outline.showVariables": false,
  "outline.showFunctions": false,
  "outline.showClasses": false,
  
  // ===== SOLO MANTENER ARCHIVOS ESENCIALES =====
  "files.associations": {
    "*.tsx": "typescriptreact",
    "*.ts": "typescript",
    "*.jsx": "javascriptreact", 
    "*.js": "javascript"
  }
}
