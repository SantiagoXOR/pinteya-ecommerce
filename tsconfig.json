{
  "compilerOptions": {
    "target": "es2020",
    // ⚡ OPTIMIZACIÓN: Incluir ES2021 y ES2022 para características modernas sin transpilación
    // Esto permite usar Array.prototype.at, Object.hasOwn, String.prototype.trimStart, etc.
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "es2021",
      "es2022"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "incremental": true,
    "forceConsistentCasingInFileNames": true,
    "exactOptionalPropertyTypes": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "allowUnusedLabels": false,
    "allowUnreachableCode": false,
    "downlevelIteration": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@/components/*": [
        "./src/components/*"
      ],
      "@/hooks/*": [
        "./src/hooks/*"
      ],
      "@/lib/*": [
        "./src/lib/*"
      ],
      "@/types/*": [
        "./src/types/*"
      ],
      "@/utils/*": [
        "./src/utils/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "out",
    "coverage",
    "test-results",
    "storybook-static",
    "playwright-report",
    "backup-*",
    "backups",
    "docs",
    "scripts",
    "__tests__",
    "e2e",
    "tests",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/*.stories.ts",
    "**/*.stories.tsx",
    "**/*.config.js",
    "**/*.config.ts",
    "jest.*.js",
    "playwright.*.ts",
    "**/*.log",
    "**/*.cache",
    "**/*.tsbuildinfo",
    "temp",
    "tmp"
  ]
}
