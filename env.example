# Google Maps API Configuration
# Obtén tu API key desde: https://console.cloud.google.com/
# Configura restricciones de dominio y API para mayor seguridad
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=tu_api_key_aqui
GOOGLE_MAPS_API_KEY=tu_api_key_aqui

# Google Analytics 4
# Obtén tu ID de medición desde: https://analytics.google.com/
# Formato: G-XXXXXXXXXX
NEXT_PUBLIC_GA_ID=G-MN070Y406E

# Meta Pixel (Facebook/Instagram Ads)
# Obtén tu Pixel ID desde: https://business.facebook.com/events_manager
# Formato: número de 15 dígitos
NEXT_PUBLIC_META_PIXEL_ID=843104698266278

# Google Ads Conversion Tracking
# Obtén tu Conversion ID y Label desde: https://ads.google.com/
# Ve a: Herramientas y configuración → Conversiones → Crear nueva conversión → Web
# Formato Conversion ID: AW-XXXXXXXXX
# Formato Conversion Label: XXXXXXXXX
# Nota: Opcional pero recomendado para tracking más preciso. Google Ads también puede importar conversiones desde GA4.
NEXT_PUBLIC_GOOGLE_ADS_CONVERSION_ID=AW-XXXXXXXXX
NEXT_PUBLIC_GOOGLE_ADS_CONVERSION_LABEL=XXXXXXXXX

# Sistema de Diagnósticos
# Contraseña para acceder a /admin/diagnostics (CAMBIAR EN PRODUCCIÓN)
NEXT_PUBLIC_DIAGNOSTICS_PASSWORD=CHANGE_ME_IN_PRODUCTION

# ⚠️ DESARROLLO: Bypass de autenticación para testing (SOLO DESARROLLO, NUNCA EN PRODUCCIÓN)
BYPASS_AUTH=true

# ===================================
# OPTIMIZACIONES DE RENDIMIENTO
# ===================================

# Performance Monitoring Sample Rate
# Porcentaje de requests que se trackean (0.0 - 1.0)
# Default: 0.1 (10% de requests)
# Reducir para mejorar performance, aumentar para más datos
PERFORMANCE_MONITORING_SAMPLE_RATE=0.1

# Monitoreo Proactivo
# Habilitar monitoreo proactivo con health checks periódicos
# Default: false (deshabilitado en producción)
# Habilitar solo si es necesario para debugging
ENABLE_PROACTIVE_MONITORING=false

# Performance Tracking Detallado
# Habilitar observers adicionales (CLS, TTI) para tracking detallado
# Default: false (deshabilitado por defecto)
# Habilitar solo para análisis profundo de performance
ENABLE_DETAILED_PERFORMANCE_TRACKING=false

# Batch Processing de Analytics
# Tamaño del batch para inserción de métricas a BD
# Default: 50 métricas por batch
ANALYTICS_BATCH_SIZE=50

# Intervalo de Flush de Analytics
# Intervalo en milisegundos para flush automático de métricas
# Default: 30000 (30 segundos)
ANALYTICS_FLUSH_INTERVAL=30000

# Gemini API Configuration
# Obtén tu API key desde: https://makersuite.google.com/app/apikey
# Necesaria para el Paint Visualizer AR (opcional pero recomendada)
GEMINI_API_KEY=tu_api_key_de_gemini_aqui

# Otras variables de entorno del proyecto
# ... (agregar otras variables según sea necesario)
